[all:vars]
ansible_python_interpreter=/usr/bin/python3
ansible_user=ubuntu
ansible_ssh_private_key_file=~/.ssh/id_rsa

[master]
# Replace with your master node IP or hostname
master ansible_host=192.168.1.10

[workers]
# Replace with your worker nodes IPs or hostnames
worker1 ansible_host=192.168.1.11
worker2 ansible_host=192.168.1.12
# Add more workers as needed
# worker3 ansible_host=192.168.1.13

[kube_control_plane:children]
master

[kube_node:children]
workers

[slurm_control:children]
master

[slurm_node:children]
workers

[jupyter:children]
master
