# SLURM Database Daemon Configuration
AuthType=auth/munge
DbdAddr={{ hostvars[groups['slurm_control'][0]]['ansible_default_ipv4']['address'] }}
DbdHost={{ groups['slurm_control'][0] }}
SlurmUser=slurm
DebugLevel=info
LogFile=/var/log/slurm/slurmdbd.log
PidFile=/var/run/slurmdbd.pid

# Database Configuration
StorageType=accounting_storage/mysql
StorageHost=localhost
StoragePort=3306
StorageUser=slurm
StoragePass={{ slurmdbd_password }}
StorageLoc=slurm_acct_db
