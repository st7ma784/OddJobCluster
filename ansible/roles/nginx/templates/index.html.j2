    <script>
        // Simple service status check
        document.addEventListener('DOMContentLoaded', function() {
            const services = ['jupyter', 'slurm', 'kubernetes'];
            services.forEach(service => {
                checkServiceStatus(service);
                // Check status every 5 minutes
                setInterval(() => checkServiceStatus(service), 300000);
            });
        });

        async function checkServiceStatus(service) {
            try {
                const response = await fetch(`/api/status/${service}`);
                const data = await response.json();
                updateStatusIndicator(service, data.status);
            } catch (error) {
                console.error(`Error checking ${service} status:`, error);
                updateStatusIndicator(service, 'down');
            }
        }

        function updateStatusIndicator(service, status) {
            const indicator = document.querySelector(`.card-title:contains('${service}') .status-indicator`);
            if (indicator) {
                indicator.className = 'status-indicator';
                indicator.classList.add(`status-${status}`);
            }
        }
    </script>
